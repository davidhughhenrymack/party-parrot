{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Party Parrot: Debug Main",
      "type": "python",
      "request": "launch",
      "module": "parrot.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Party Parrot: Debug with Profiling",
      "type": "python",
      "request": "launch",
      "module": "parrot.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "PROFILE_VJ": "true",
        "PROFILE_VJ_INTERVAL": "30"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Party Parrot: Debug Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "${workspaceFolder}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Party Parrot: Debug Specific Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "${file}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Party Parrot: Debug Laser Renderer",
      "type": "python",
      "request": "launch",
      "module": "parrot.vj.nodes.laser_array_render",
      "args": [
        "--out",
        "test_output/laser_array_debug.png"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "DISPLAY": ":99"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Party Parrot: Debug Beam Analyzer",
      "type": "python",
      "request": "launch",
      "module": "parrot.vj.nodes.beam_image_analyzer",
      "args": [
        "test_output/laser_array.png"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "stopOnEntry": false
    }
  ]
}